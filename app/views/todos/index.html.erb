<div class="row">
	<div class="col-md-4 offset-md-4">
		<div class="card card-block bg-faded">
			<% @todos.each do |todo| %>
				<p> <%= todo.description %> </p>
				<span class="btn btn-success btn-lg"> <%= link_to 'Marcar como completado', todo_complete_path(todo) %> </span>
				<span class="btn btn-info btn-lg"> <%= link_to 'Mostrar', todo %> </span>
				<span class="btn btn-warning btn-lg"> <%= link_to 'Editar', todo_edit_path(todo) %> </span>
				<span class="btn btn-danger btn-lg"> <%= link_to "Borrar", todo, method: :delete %> </span>
				<br>
			<% end %>
		</div>
		<%= link_to 'Crear Todo', todos_new_path %>
	</div>
</div>




