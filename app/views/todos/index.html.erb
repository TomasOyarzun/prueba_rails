<div class="jumbotron">
	<% @todos.each do |todo| %>
		<div class="p-3">
			<h3> <%= todo.description %> </h3>	
			<hr>			
		</div>
		<button type="button" class="btn btn-success btn-lg"> 
			<%= link_to 'Marcar como completado', todo_complete_path(todo), class: "color-link" %> 
		</button>
		<button type="button" class="btn btn-info btn-lg"> 
			<%= link_to 'Mostrar', todo, class: "color-link" %> 
		</button>
		<button type="button" class="btn btn-warning btn-lg"> 
			<%= link_to 'Editar', todo_edit_path(todo), class: "new-color" %> 
		</button>
		<button type="button" class="btn btn-danger btn-lg"> 
			<%= link_to "Borrar", todo, method: :delete, class: "color-link" %> 
		</button>
		<br>
	<% end %>
	<h1><button type="button" class="badge badge-warning mt-4">
		<%= link_to 'Crear Todo', todos_new_path, class: "new-color" %>
	</button></h1>
</div>